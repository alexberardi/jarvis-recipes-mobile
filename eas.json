{
  "cli": {
    "version": ">= 16.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "EXPO_PUBLIC_AUTH_API_BASE_URL": "http://localhost:8007",
        "EXPO_PUBLIC_RECIPES_API_BASE_URL": "http://localhost:8001"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "env": {
        "EXPO_PUBLIC_AUTH_API_BASE_URL": "https://auth-staging.jarvisautomation.io",
        "EXPO_PUBLIC_RECIPES_API_BASE_URL": "https://recipes-staging.jarvisautomation.io"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "EXPO_PUBLIC_AUTH_API_BASE_URL": "https://auth.jarvisautomation.io",
        "EXPO_PUBLIC_RECIPES_API_BASE_URL": "https://recipes.jarvisautomation.io"
      }
    }
  },
  "submit": {
    "preview": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${ASC_APP_ID}",
        "appleTeamId": "${APPLE_TEAM_ID}"
      }
    },
    "production": {
      "ios": {
        "appleId": "${APPLE_ID}",
        "ascAppId": "${ASC_APP_ID}",
        "appleTeamId": "${APPLE_TEAM_ID}"
      }
    }
  }
}

